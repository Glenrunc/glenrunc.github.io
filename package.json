{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "A modern, responsive portfolio website showcasing professional skills and projects",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o dist/css/main.min.css css/main.css css/responsive.css",
    "minify:js": "terser js/main.js js/typed.js js/animations.js -o dist/js/main.min.js",
    "optimize:images": "imagemin assets/images/* --out-dir=dist/assets/images",
    "test": "jest",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "serve": "http-server -p 8080 -c-1",
    "watch:css": "chokidar \"css/**/*.css\" -c \"npm run minify:css\"",
    "watch:js": "chokidar \"js/**/*.js\" -c \"npm run minify:js\"",
    "validate:html": "html-validate index.html",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "deploy:gh-pages": "gh-pages -d ."
  },
  "keywords": [
    "portfolio",
    "website", 
    "responsive",
    "modern",
    "css3",
    "html5",
    "javascript",
    "animations"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://your-portfolio.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/portfolio/issues"
  },
  "homepage": "https://yourusername.github.io/portfolio/",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.50.0",
    "gh-pages": "^6.0.0",
    "html-validate": "^8.5.0",
    "http-server": "^14.1.1",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "jest": "^29.7.0",
    "lighthouse": "^11.1.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "terser": "^5.20.0"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "private": false
}